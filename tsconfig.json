{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noLib": false,
    "lib": ["ESNext"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "allowJs": true,
  "assets": ["src/**/*"],
  "watchAssets": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
